    <section class="section" id="contact-us">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-xs-12">
                    <div class="left-text-content">
                        <div class="section-heading">
                            <h6>Login</h6>
                            <h2>Feel free to keep in touch with us!</h2>
                        </div>
                        <ul class="contact-info">
                            <li><img src="assets/images/contact-info-01.png" alt="">010-020-0860</li>
                            <li><img src="assets/images/contact-info-02.png" alt="">info@company.com</li>
                            <li><img src="assets/images/contact-info-03.png" alt="">www.company.com</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-8 col-md-8 col-xs-12">
                    <div class="contact-form">
                        <form id="login" action="/login" method="POST">
                          <div class="row col-md-6 col-sm-12">
                            <div class="col-md-12 col-sm-12">
                                <div class="section-heading">
                                   <h6>Empolyee Sign in form!</h6>
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12">
                              <fieldset>
                                <input name="email" type="email" id="email" placeholder="Your Email *" required="">
                              </fieldset>
                            </div>
                            <div class="col-md-12 col-sm-12">
                              <fieldset>
                                <input name="password" type="password" id="password" placeholder="Your password *">
                              </fieldset>
                            </div>
                            <div class="col-lg-12">
                              <fieldset>
                                <button type="submit" id="form-submit" class="main-button-icon">Sign In <i class="fa fa-arrow-right"></i></button>
                              </fieldset>
                            </div>
                            <div class="col-lg-12 mt-3 mb-3">
                              <fieldset>
                               <input type="checkbox" value="remember-me"/>
                               Remember Me
                               <a href="/">Need Help?</a>
                              </fieldset>
                            </div>
                            <div class="col-lg-12">
                              <fieldset>
                                <a href="/">Create an account</a>
                              </fieldset>
                            </div>
                          </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
